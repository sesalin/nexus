{
  "name": "Nexus Dash",
  "version": "0.2.95",
  "slug": "nexus",
  "description": "Dashboard amigable para controlar Home Assistant",
  "arch": [
    "amd64",
    "aarch64"
  ],
  "image": "docker.io/chekosg/nexus_dashboard",
  "startup": "services",
  "boot": "auto",
  "ingress": false,
  "init": false,
  "map": [
    "config:rw",
    "ssl:ro",
    "media:rw",
    "share:rw"
  ],
  "homeassistant_api": true,
  "hassio_api": true,
  "environment": {
    "ADDON": "true",
    "ND_DATA_VIA_SUPERVISOR": "true"
  },
  "options": {
    "port": 5050,
    "hass_url": "",
    "nd_disable_cooldown": 0,
    "vapid_public_key": "",
    "vapid_private_key": "",
    "internal_push_token": "",
    "contact_email": "",
    "support_phone": "",
    "support_whatsapp": ""
  },
  "schema": {
    "port": "int",
    "hass_url": "str?",
    "nd_disable_cooldown": "int(0,1)",
    "vapid_public_key": "str?",
    "vapid_private_key": "str?",
    "internal_push_token": "password?",
    "contact_email": "str?",
    "support_phone": "str?",
    "support_whatsapp": "str?"
  },
  "ports": {
    "5050/tcp": 5050
  },
  "webui": "http://[HOST]:[PORT:5050]/",
  "watchdog": "http://[HOST]:[PORT:5050]/health"
}
