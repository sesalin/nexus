  "schema": {
    "client_id": "str",
    "supabase_url": "str",
    "supabase_token": "str",
    "update_interval": "int",
    "entities": ["str"],
    "client_name": "str?",
    "reporting_enabled": "bool",
    "log_level": "list(debug|info|warning|error)"
  }
