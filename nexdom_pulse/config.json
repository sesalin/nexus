{
  "name": "Nexdom Pulse",
  "version": "0.1.0",
  "slug": "nexdom_pulse",
  "description": "Reporte de entidades de Home Assistant a Supabase v√≠a RPC",

  "arch": ["aarch64", "amd64", "armv7"],
  "startup": "services",
  "boot": "auto",

  "homeassistant_api": true,
  "hassio_api": true,
  "auth_api": true,
  "full_access": true,
  "host_network": true,

  "options": {
    "client_id": "",
